mixin navbarSecondary(type, active)
  nav.navbar-secondary
    ul.navbar-secondary__list
      if type == "events"
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="event-management" 
            href="./event-management"
            class= active == "event management" ? "active" : ""
          )
            p Event Management
            .underline
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="markets" 
            href="./markets"
            class= active == "markets" ? "active" : ""
          )
            p Markets
            .underline

      else if type == "design"
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="website-design" 
            href="./website-design"
            class= active == "website design" ? "active" : ""
          )
            p Website Design
            .underline
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="design-for-print" 
            href="./design-for-print"
            class= active == "design for print" ? "active" : ""
          )
            p Design for Print
            .underline
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="logo-design" 
            href="./logo-design"
            class= active == "logo design" ? "active" : ""
          )
            p Logo Design
            .underline

      else if type == "marketing"
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="workshops" 
            href="./workshops"
            class= active == "workshops" ? "active" : ""
          )
            p Workshops
            .underline
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="freelance" 
            href="./freelance-marketing"
            class= active == "freelance" ? "active" : ""
          )
            p Freelance
            .underline
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="social" 
            href="./social-media"
            class= active == "social media" ? "active" : ""
          )
            p Social Media
            .underline
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="copywriting" 
            href="./copywriting-services"
            class= active == "copywriting" ? "active" : ""
          )
            p Copywriting
            .underline
        li.navbar-secondary__item
          a.navbar-secondary__link(
            id="consultancy" 
            href="./consultancy"
            class= active == "consultancy" ? "active" : ""
          )
